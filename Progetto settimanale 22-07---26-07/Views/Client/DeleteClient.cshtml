@model DataLayer.Data.ClientEntity

@{
    ViewData["Title"] = "Conferma Eliminazione";
}
<div class="row">
    <h1>Conferma Eliminazione</h1>
    <hr />
    <h3>Sei sicuro di voler eliminare il cliente?</h3>
    <div class="custom-container">
        <h5>@Model.Name @Model.Surname</h5>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayFor(model => model.FiscalCode)
            </dt>
            <dd class="col-sm-10">
                @Model.FiscalCode
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayFor(model => model.Email)
            </dt>
            <dd class="col-sm-10">
                @Model.Email
            </dd>
        </dl>
    </div>
    <form asp-action="Delete" class="mt-5">
        <input type="hidden" asp-for="FiscalCode"/>
        <button type="submit" class="custom-btn">Elimina</button>
        <a asp-controller="Home" asp-action="Index" class="link-secondary">Annulla</a>
    </form>
</div>
