@model List<DataLayer.Data.ServiceDto>

@{
    ViewData["Title"] = "AddService";
}

<h1>Seleziona Servizi per la Prenotazione</h1>

<form asp-action="SaveSelectedServices" method="post">
    <table class="table">
        <thead>
            <tr>
                <th>Servizio</th>
                <th>Prezzo</th>
                <th>Quantità</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => m[i].Description)
                    </td>
                    <td>
                        @Model[i].Price.ToString("C", new System.Globalization.CultureInfo("it-IT"))
                    </td>
                    <td>
                        <input type="number" name="services[@i].Quantity" value="@Model[i].Quantity" min="1" />
                    </td>
                    <input type="hidden" asp-for="@Model[i].ServiceId" value="@Model[i].ServiceId" />
                </tr>
            }
        </tbody>
    </table>
    <input type="hidden" name="bookingId" value="@ViewData["BookingId"]" />
    <button type="submit" class="btn btn-primary">Salva Servizi Selezionati</button>
</form>

<a asp-action="Index" asp-controller="Home">Annulla e torna alla home</a>
